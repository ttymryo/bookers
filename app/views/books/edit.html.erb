<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label>Title</label>
    <div><%= f.text_field :title %></div>
  </div>

  <div class="field">
    <label>Body</label>
    <div><%= f.text_area :body %></div>
  </div>

  <div class="actions"><%= f.submit 'Update Book' %></div>
  <form>
    <%= link_to 'show', book_path %>
    |
    <%= link_to 'back', '/books' %>
  </form>

<% end %>